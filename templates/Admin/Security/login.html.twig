{% extends 'base.html.twig' %}
{% block title %}{{ 'login_page_title'|trans({}, 'login') }}{% endblock %}
{% block body %}
    <div class="loginColumns">
        <div class="ibox-title">
            <h5>{{ 'login_form_title'|trans({}, 'login') }}</h5>
        </div>
        <div class="ibox-content">
            {% if error %}
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                    <h4><i class="icon fa fa-ban"></i> {{ 'login_form_error_header'|trans({}, 'login') }}</h4>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            <form action="{{ path('app_user_login') }}" method="post">
                <div class="form-group has-feedback">
                    <input type="text"
                           id="username"
                           class="form-control"
                           name="_username"
                           placeholder="{{ 'login_form_username'|trans({}, 'login') }}"
                           value="{{ last_username }}"/>
                </div>
                <div class="form-group has-feedback">
                    <input type="password"
                           id="password"
                           name="_password"
                           class="form-control"
                           placeholder="{{ 'login_form_password'|trans({}, 'login') }}"/>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-4">
                        <button type="submit"
                                class="btn btn-primary btn-block">{{ 'login_form_login_btn'|trans({}, 'login') }}</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
